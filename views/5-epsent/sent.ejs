<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="robots" content="noindex,nofollow">
    <title>‚úÖ File Sent Successfully</title>
    <%- include('./partials/style.ejs'); %>
</head>

<body>
    <div class="land">
        <div class="tick">
            <i class="fa-solid fa-circle-check"></i>
        </div>
        <div class="butt">
            <div class="user">
                <div id="ds" style="font-weight: bolder; margin-bottom: 8px;">
                    <i class="fa-solid fa-circle-check" style="color: green;"></i>
                    Episode Sent Successfully,
                    <span class="check">(check your Telegram inbox)</span>
                </div>
                <h5>
                    <i class="fa-solid fa-user"></i>
                    <span><b>To: </b>
                        <%= user.fname.substring(0,22) %>
                    </span>
                </h5>
                <h5>
                    <i class="fa-solid fa-id-card"></i>
                    <span><b>TG ID: </b>
                        <%= user.userId %>
                    </span>
                </h5>
                <h5>
                    <i class="fa-solid fa-download"></i>
                    <span><b>Your downloads: </b>
                        <%= user.downloaded %> episodes.
                    </span>
                </h5>
                <h5>
                    <i class="fa-solid fa-ranking-star"></i>
                    <span><b>Rank: </b>#<%= rnk %></span>
                </h5>
                <span id="return">
                    <i class="fa-brands fa-telegram" style="color: #1e90ff;"></i>
                    Return to Telegram...
                </span>
            </div>
        </div>
        <div class="top">
            <table class="table caption-top table-striped">
                <caption>
                    <span class="cap">Top 100 dramastore <b>Koreaboo üòç</b></span>
                    <span class="desc">Koreaboo = <i>someone who is obsessed with K-dramas or k-pop.</i></span>
                </caption>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">TG 1st name</th>
                        <th scope="col">Downloads</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((u, i)=> { %>
                        <tr>
                            <td>
                                <%= i + 1 %>.
                            </td>
                            <td>
                                <%= u.fname.substring(0,22) %>
                            </td>
                            <td>
                                <%= u.downloaded %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center" id="spin">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div class="famba" style="display: none;">
        <%- include('../0-global/famba.ejs'); %>
    </div>

    <script>
        setTimeout(() => {
            document.getElementById('spin').style.display = 'none'
            document.querySelector('.land').style.display = 'flex'
        }, 3500)

        document.getElementById('return').addEventListener('click', () => {
            window.open(`tg://resolve?domain=dramastorebot`, '_self')
        })
    </script>

    <!-- propellar multitag -->
    <script>(function(s,u,z,p){s.src=u,s.setAttribute('data-zone',z),p.appendChild(s);})(document.createElement('script'),'https://inklinkor.com/tag.min.js',5503482,document.body||document.documentElement)</script>
</body>

</html>