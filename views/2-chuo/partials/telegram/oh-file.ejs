<script>
    function ohTelegramFile() {
        let hash = window.location.hash
        if (hash.includes('#getting-full-show')) {
            //mfan0 #getting-full-show-showid=GHGghdttY

            let nano = hash.split('showid=')[1]
            let ohtweb = document.getElementById('ohtweb')
            let wait = document.getElementById('waitOHTG')
            let real = document.getElementById('realOHTG')
            let waitButton = document.getElementById('waitBOHTG')

            if (hash.includes('-NAN-uid')) {
                let uid = hash.split('NAN-uid=')[1].split('&-showid')[0].trim()
                ohtweb.setAttribute('href', `/oh-req/${uid}/${nano}`)
                ohtweb.removeAttribute('target')
                document.getElementById('par_desc').style.display = 'none'
                document.getElementById('maelz2').style.display = 'none'
                ohtweb.innerText = 'REQUEST FULL VIDEO'
                real.style.display = 'none'
            } else {
                ohtweb.setAttribute('href', `https://t.me/ohmychannelV2bot?start=fromWeb-${nano}`)
                real.setAttribute('onclick', `openTg('${nano}')`)
            }

            let count = 12
            let interval = setInterval(() => {
                count -= 1
                wait.innerText = count

                if (count == 0) {
                    clearInterval(interval)
                    waitButton.style.display = 'none'
                    if(!hash.includes('-NAN-uid')) {
                        real.style.display = 'block'
                    }
                    document.querySelector('.ohtweb').style.display = 'flex'
                }
            }, 1000)
        }
    }

    ohTelegramFile()

    function openTg(nano) {
        window.open(`tg://resolve?domain=ohmychannelV2bot&start=fromWeb-${nano}`)
    }
</script>